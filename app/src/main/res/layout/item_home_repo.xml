<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.content.Context" />
        <variable
            name="repoItem"
            type="org.sopt.sample.domain.model.home.Repo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp">

        <ImageView
            android:id="@+id/iv_item_home_repo_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="레포 이미지" />

        <TextView
            android:id="@+id/tv_item_home_repo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{repoItem.title}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_item_home_repo_desc"
            app:layout_constraintStart_toEndOf="@id/iv_item_home_repo_profile" />

        <TextView
            android:id="@+id/tv_item_home_repo_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{repoItem.desc}"
            app:layout_constraintStart_toEndOf="@id/iv_item_home_repo_profile"
            app:layout_constraintTop_toBottomOf="@id/tv_item_home_repo_title"
            app:layout_constraintBottom_toBottomOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>