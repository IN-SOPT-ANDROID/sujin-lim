<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="H1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="H2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="T1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="T2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="B1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="B2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Text Input -->
    <style name="SoptTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!--FilledBox일 경우 밑줄 색상, OutlinedBox일 경우 테두리 색상-->
<!--        <item name="boxStrokeColor">@color/selector_text_input_box_stroke</item>-->
        <item name="boxBackgroundColor">@color/selector_text_input_box_bg</item>

        <!--EditText에 있을때의 Hint-->
        <item name="android:textColorHint">@color/gray_200</item>

        <!--상단에 있을때의 Hint-->
        <item name="hintTextColor">@color/navy_700</item>

        <!--Error-->
        <item name="errorEnabled">true</item>
        <item name="colorError">@color/red</item>
        <item name="errorIconDrawable">@android:color/transparent</item>
    </style>
</resources>